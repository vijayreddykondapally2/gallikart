rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    function isOps() {
      return request.auth != null && (request.auth.token.role == 'staff' || request.auth.token.role == 'ops');
    }

    match /vendors/{vendorId}/orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == vendorId;
    }

    match /vendors/{vendorId}/inventory/{productId} {
      allow read, write: if request.auth != null && (request.auth.uid == vendorId || isAdmin());
    }

    match /vendors/{vendorId} {
      allow read, write: if request.auth != null && (request.auth.uid == vendorId || isAdmin());
    }

    match /users/{userId}/orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }

    match /opsOrders/{orderId} {
      allow read, write: if isAdmin() || isOps();
    }

    match /orders/{documentId} {
      allow read, write: if false;
    }
  }
}
